@page "/"

<PageTitle>Gerador de Dados</PageTitle>

<MudContainer Class="mt-8" MaxWidth="MaxWidth.Medium">
    <MudGrid>

        @* Exibir em tela normal e grande *@
        <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
            <MudItem xs="11">
                <MudText Typo="Typo.h5" Color="Color.Primary">Bem-vindo ao Gerador de Dados!</MudText>
                <MudText Typo="Typo.subtitle1" Class="mt-2">
                    Este sistema foi desenvolvido para ajudar desenvolvedores a testar suas aplicações com dados fictícios.
                    Criado com dedicação por João Ezequiel Lima.
                </MudText>
            </MudItem>
            <MudItem xs="1">
                <MudAvatar Size="Size.Large" Color="Color.Primary" Variant="Variant.Outlined">
                    <MudImage Src="images/dev.png"></MudImage>
                </MudAvatar>
            </MudItem>
        </MudHidden>

        @* Exibir em telas pequenas *@
        <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
            <MudItem xs="2">
                <MudAvatar Size="Size.Large" Color="Color.Primary" Variant="Variant.Outlined">
                    <MudImage Src="images/dev.png"></MudImage>
                </MudAvatar>
            </MudItem>
            <MudItem xs="10">
                <MudText Typo="Typo.h5" Color="Color.Primary">Bem-vindo ao Gerador de Dados!</MudText>
            </MudItem>
            <MudItem xs="12">
                <MudText Typo="Typo.subtitle1">
                    Este sistema foi desenvolvido para ajudar desenvolvedores a testar suas aplicações com dados fictícios.
                    Criado com dedicação por João Ezequiel Lima.
                </MudText>
            </MudItem>
        </MudHidden>

        <MudItem xs="12">
            <MudDivider></MudDivider>
        </MudItem>

        @* Exibir em tela normal e grande *@
        <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
            <MudItem xs="4">
                <Card Image="images/generate-cpf.png" Title="Gerador CPF"
                      Description="Crie números de CPF válidos para testar suas aplicações de forma rápida e segura."
                      Href="gerar-cpf" />
            </MudItem>
            <MudItem xs="4">
                <Card Image="images/generate-cnpj.png" Title="Gerador CNPJ"
                      Description="Gere CNPJs válidos para simular e testar suas aplicações comerciais com segurança."
                      Href="gerar-cnpj" />
            </MudItem>
            <MudItem xs="4">
                <Card Image="images/generate-cep.png" Title="Gerador CEP"
                      Description="Obtenha CEPs válidos para testar funcionalidades de localização e endereçamento."
                      Href="gerar-cep" />
            </MudItem>
            <MudItem xs="4">
                <Card Image="images/generate-empresa.png" Title="Gerador Empresa"
                      Description="Gere dados fictícios completos de empresas, incluindo CNPJ, endereço, e informações de contato, para testar e validar suas aplicações empresariais."
                      Href="gerar-empresa" />
            </MudItem>
            <MudItem xs="4">
                <Card Image="images/generate-pessoa.png" Title="Gerador Pessoa"
                      Description="Gere perfis completos de pessoas fictícias com dados válidos, incluindo nome, CPF, RG, endereço, e mais. Ideal para testes de aplicações."
                      Href="gerar-pessoa" />
            </MudItem>
        </MudHidden>

        @* Exibir em telas pequenas *@
        <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
            <MudItem xs="4">
                <Card Image="images/generate-cpf.png" Title="Gerador CPF" TypoTitle="Typo.subtitle1" Href="gerar-cpf" Height="100" />
            </MudItem>
            <MudItem xs="4">
                <Card Image="images/generate-cnpj.png" Title="Gerador CNPJ" TypoTitle="Typo.subtitle1" Href="gerar-cnpj" Height="100" />
            </MudItem>
            <MudItem xs="4">
                <Card Image="images/generate-cep.png" Title="Gerador CEP" TypoTitle="Typo.subtitle1" Href="gerar-cep" Height="100" />
            </MudItem>
            <MudItem xs="4">
                <Card Image="images/generate-empresa.png" Title="Gerador Empresa" TypoTitle="Typo.subtitle1" Href="gerar-empresa" Height="100" />
            </MudItem>
            <MudItem xs="4">
                <Card Image="images/generate-pessoa.png" Title="Gerador Pessoa" TypoTitle="Typo.subtitle1" Href="gerar-pessoa" Height="100" />
            </MudItem>
        </MudHidden>

    </MudGrid>
</MudContainer>